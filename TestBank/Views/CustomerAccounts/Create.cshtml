@model TestBank.Models.CustomerAccount

@{
    ViewBag.Title = "Create";
}

<h3 style="padding:0.5% 30%">ADD ACCOUNT</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group ">
            @Html.LabelFor(model => model.CustID, "Customer Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CustID, new { htmlAttributes = new { @class = "form-control", @Value = @ViewBag.customer.CustID, @readonly = "readonly" } })
           
            @Html.ValidationMessageFor(model => model.CustomerDetail.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.DropDownListFor(model=>model.AccountType,ViewBag.Acctypes as SelectList,"--- Select Account Type ---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountSubType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AccountSubType, ViewBag.Accsubtypes as SelectList, "--- Select Account SubType ---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountSubType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

