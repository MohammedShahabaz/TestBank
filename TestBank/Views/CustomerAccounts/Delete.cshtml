@model TestBank.Models.CustomerAccount

@{
    ViewBag.Title = "Delete";
}

<h2 style="padding:0% 15%">Delete:</h2>
<h4 style="padding:0% 25%">This will delete the account with all his transactions</h4>
<h4 style="padding:0% 25%">Are you sure you want to delete this?</h4>
<br />

    <h3 style="padding:0% 33%">Account Detail</h3>
    <hr />

    <div class="col-md-offset-3">


        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.AccNum)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AccNum)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AccountType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccountType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AccountSubType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccountSubType)
            </dd>



            <dt>
                @Html.DisplayNameFor(model => model.CustomerDetail.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CustomerDetail.FirstName)
            </dd>

        </dl>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-actions no-color row">
                    <div class="col-md-2 col-md-offset-1">
                        <input type="submit" value="Delete" class="btn btn-default" />
                    </div>
                    <div class="col-md-2 col-md-offset-0">
                        <button type="button" class="btn btn-default" onclick="location.href = '@Url.Action("Search","CustomerDetails")'">Cancel</button>
                    </div>
                </div>
            </div>
        }
    </div>
