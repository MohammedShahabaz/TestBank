@model IEnumerable<TestBank.Models.CustomerAccount>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div style="height:200px; overflow:auto; width:800px" class="container ">
    <div class="row">
        <table class="col-xs-7 table-bordered table-striped table-condensed table-fixed">
            <thead>
            <tr>
                <th class="col">
                    @Html.DisplayNameFor(model => model.AccNum)
                </th>
                <th class="col">
                    @Html.DisplayNameFor(model => model.AccountType)
                </th>
                <th class="col">
                    @Html.DisplayNameFor(model => model.AccountSubType)
                </th>

                <th class="col">
                    @Html.DisplayNameFor(model => model.CustomerDetail.FirstName)
                </th>
                <th></th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                <tr>
                    <td class="col">
                        @Html.DisplayFor(modelItem => item.AccNum)
                    </td>
                    <td class="col">
                        @Html.DisplayFor(modelItem => item.AccountType)
                    </td>
                    <td class="col">
                        @Html.DisplayFor(modelItem => item.AccountSubType)
                    </td>

                    <td class="col">
                        @Html.DisplayFor(modelItem => item.CustomerDetail.FirstName)
                    </td>
                    <td class="col">
                        @Html.ActionLink("Edit", "Edit", new { id = item.AccNum }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AccNum }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AccNum })
                    </td>
                </tr>
               </tbody>
            }

        </table>
    </div>
</div>


