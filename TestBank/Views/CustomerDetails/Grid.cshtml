@model IEnumerable<TestBank.Models.CustomerAccount>
@{ 
    ViewBag.Title = "Grid";
}


<div style="height:200px; overflow:auto; width:850px" class="container ">
    
        <table style="width:100%" class="col-md-8 table-bordered table-striped table-condensed table-fixed">
            <thead >
                <tr>
                    <th class="col" style="position:-webkit-sticky; position:sticky ;top:0;background-color:white">
                        @Html.DisplayNameFor(model => model.AccNum)
                    </th>
                    <th class="col" style="position: -webkit-sticky; position: sticky; top: 0; background-color: white">
                        @Html.DisplayNameFor(model => model.AccountType)
                    </th>
                    <th class="col" style="position: -webkit-sticky; position: sticky; top: 0; background-color: white">
                        @Html.DisplayNameFor(model => model.AccountSubType)
                    </th>
                    <th class="col" style="position: -webkit-sticky; position: sticky; top: 0; background-color: white">
                        @Html.DisplayNameFor(model => model.CustomerDetail.FirstName)
                    </th>
                    <th class="col" style="position: -webkit-sticky; position: sticky; top: 0; background-color: white">
                        @Html.DisplayName("                 ")
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td class="col">
                            @Html.DisplayFor(modelItem => item.AccNum)
                        </td>
                        <td class="col">
                            @Html.DisplayFor(modelItem => item.AccountType)
                        </td>
                        <td class="col">
                            @Html.DisplayFor(modelItem => item.AccountSubType)
                        </td>

                        <td class="col" >
                            @Html.DisplayFor(modelItem => item.CustomerDetail.FirstName)
                        </td>
                        <td class="col" >
                            <div class="row">
                                <div class="col-xs-3 ">
                                    <button type="button" class="btn btn-default" onclick="location.href = '@Url.Action("Edit", "SavingAccountDetails", new { id = item.AccNum })'">Update</button>
                                 </div>
                                 <div class="col-xs-3 ">
                                        <button type="button" class="btn btn-default" onclick="location.href = '@Url.Action("Details", "SavingAccountDetails", new { id = item.AccNum })'">Check Details</button>
                                  </div>
                                     <div class="col-xs-3 col-xs-offset-1">
                                            <button type="button" class="btn btn-default" onclick="location.href = '@Url.Action("Delete", "CustomerAccounts", new { id = item.AccNum})'">Delete</button>
                                       </div>
                            </div>
                         </td>
                    </tr>
                </tbody>
            }

        </table>
        </div>


